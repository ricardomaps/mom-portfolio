---
/**
 * * Pricing cards with three cards
 */

import Button from "@components/Button/Button.astro";
import { Image } from "astro:assets";

interface pricingItem {
	name: string; // plan name
	featured?: boolean; // if true, will be highlighted or otherwise featured
	// price: number;
	// features: string[]; // list of features
	features: string;
	image: ImageMetadata; // imported image
}

import image3 from "@assets/images/wedding-guests.jpeg";
import image1 from "@assets/images/beach-wedding.jpeg";
import image2 from "@assets/images/wedding-vows.jpeg";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
	{
		name: "Formaturas",
		featured: false,
		// price: 0,
		features: "A cerimônia de formatura é um momento de celebração e reconhecimento — não apenas do esforço individual, mas de uma trajetória coletiva marcada por conquistas. Dou voz à emoção, conduzindo com fluidez cada etapa e garantindo a grandeza que essa ocasião merece.",
		image: image1,
	},
	{
		name: "Casamentos",
		featured: true,
		// price: 0,
		features: "Com sensibilidade, presença e uma comunicação acolhedora, conduzo cerimônias de casamento que refletem a essência do casal — únicas, leves e inesquecíveis.Celebre o amor com uma cerimônia feita para emocionar.",
		image: image2,
	},
	{
		name: "Debutantes",
		featured: false,
		// price: 0,
		features: "Mais do que uma festa, o baile de debutante é um momento de sonho e transformação — e cada detalhe merece ser vivido com emoção. Minha missão é valorizar a trajetória, dar voz às homenagens e tornar cada entrada, cada palavra e cada sorriso parte de uma noite verdadeiramente inesquecível.",
		image: image3,
	},
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">Photography Packages</h2>
	</div>

	<!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
	<div
		class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
	>
		{
			pricingData.map((plan) => (
				<div
					class="flex w-full flex-col"
					class:list={[
						{
							"bg-primary-200": plan.featured === true,
						},
					]}
				>
					<div>
						<div class="aspect-[3/4] h-auto w-full overflow-hidden">
							<Image
								src={plan.image}
								alt={plan.name}
								width={450}
								densities={[1.5, 2]}
								class="h-full w-full object-cover"
							/>
						</div>
					</div>
					<div class="border-primary-200 flex h-full flex-col justify-between border-2 border-t-0 pt-10 pb-10 px-10">
						<div>
							<h3 class="h3 text-center mb-4">{plan.name}</h3>

							{/* <ul class="mt-4 flex flex-col gap-3 px-8">
								{plan.features.map((feature) => (
									<li class="leading-snug lg:text-lg lg:leading-snug">{feature}</li>
								))}
							</ul> */}
							<p>{plan.features}</p>
						</div>
						{/* <p class="font-decorative text-base-800 mt-6 flex justify-center text-center text-[5rem] leading-none">
							${plan.price}
							<span class="flex h-full text-[3.5rem]">+</span>
						</p> */}
					</div>
				</div>
			))
		}
	</div>

	<div class="mt-12 flex justify-center">
		<Button href="/#contact" variant="outline" class="px-8">Get a quote</Button>
	</div>
</section>
